<%= render 'location_search' %>

<%= form_for @event do |f| %>

  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this Event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.text_field :name, placeholder: "Event Name", size: 50 %>
  </p>

  <p>
    <%= f.text_field :location, placeholder: "Location", id: 'searchTextField', size: 50 %>
  </p>

  <p>
    <%= f.datetime_select :start_time, :ampm => true, :minute_step => 15 %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
