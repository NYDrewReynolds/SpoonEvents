<% if current_user.events.include?(@event) %>
<button type="button" class="btn btn-success btn-lg active">You're Going!</button>
<%= render 'click_to_tweet' %>
<% else %>
<%= link_to "Attend Event", registrations_path(:user_id => current_user.id, :event_id => @event.id), :method => :post, class: "btn btn-lg btn-success" %>
<% end %>
